{
    "include": [
        "resources/**/*.ts",
        "resources/**/*.entity.d.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue",
        "sort-lang.js",
    ],
    "@/*": ["./src/*"],
    "compilerOptions": {
        "allowJs": false,
        "strict": true,
        "types": ["vite/client"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "noImplicitThis": true,
        "verbatimModuleSyntax": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "paths": {
          "@/*": ["./resources/js/*"],
          "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
    }
}
